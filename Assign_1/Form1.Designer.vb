    '''Proccesing event on key press in TextBox tbxResult
    Private Sub tbxResult_KeyPress(sender As Object, e As KeyPressEventArgs) Handles tbxResult.KeyPress
        '''add strings with values that are allowed 
        '''to press everithing else will not work 
        Dim s As String = "1234567890."
        Dim d As String = "*/+-"
        Dim c As Char = "="


        '''check if it's a number or .
        If s.IndexOf(e.KeyChar) <> -1 Then
            '''if its a number or . then use procedure Add_To_TextBox
            '''parameter e.KeyChar show value of button on keyboard that
            '''was pressed
            Add_To_TextBox(e.KeyChar)
        ElseIf d.IndexOf(e.KeyChar) <> -1 Then
            '''check if it was pressed one of the signs
            '''+-*/
            '''use Attache_Sigh_of_Operation with e.KeyChar parameter
            Attache_Sigh(e.KeyChar)
        ElseIf c = e.KeyChar Then
            '''if it was pressed = then use ResultOfOperation procedure
            ResultOfOperation()
        ElseIf e.KeyChar = vbBack Then
            '''check if it was pressed backspace key
            '''clear all inputed numbers before
            tbxResult.Text = ""
            Make_Null_Hidden()
        End If

        '''make e.KeyChar empty becouse otherwise it will be a double input
        '''in tbxResult
        e.KeyChar = ""

    End Sub

