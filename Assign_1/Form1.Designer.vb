    '''this procedure are executed when user  press equal 
    '''button on form or press equal on keyboard
    Private Sub ResultOfOperation()
        If clear <> True Then
            GetResult()
            equalPress = True
            clear = True
        End If
    End Sub

    ''' Add_To_TextBox contains conditions
    ''' for concatinating an number to existing string
    Private Sub Add_To_TextBox(element As Char)

        '''check if it was pressed an operation button "+-*/"
        '''if it was pressed clear will be True and tbxResult will 
        '''change value to ""
        If clear Then
            tbxResult.Text = ""
            clear = False
        End If

        '''Check if first element that user pressed it is .
        '''then we add first elemtnt of string 0
        If tbxResult.Text = "" And element = "." Then
            tbxResult.Text += "0"
        End If

        '''If . its pressed second time this element woudn't be
        '''shown in tbxResult
        If tbxResult.Text.IndexOf(".") <> -1 And element = "." Then
        Else
            '''concatinate current element with 
            '''existing string
            tbxResult.Text += element
        End If
    End Sub

    ''' Procedure for events on pressing +-*/ buttons
    Private Sub Attache_Sigh(sign As Char)

        '''check if have already 2 numbers to find result
        '''show result like equal
        If tbxResult.Text <> "" And lblIntermediate.Text <> "" And clear = False Then
            GetResult()
        End If

        '''check if it was pressed equal or it is first number 
        '''to save this number in lblIntermediate
        If clear = False Or equalPress = True Then
            lblSignOfOperation.Text = sign
            lblIntermediate.Text = tbxResult.Text
            clear = True
            equalPress = False
        End If
    End Sub

    ''' Procedure that calc. result of 
    ''' operation between 2 numbers
    Private Sub GetResult()

        '''look if it have saved something in lblIntermediate
        '''if not its not doing nothing

        If lblIntermediate.Text <> "" Then

            '''after check we know that both numbers are
            '''inputed so we declare 2 variables with valueType Double
            Dim first_val, second_val As Double

            '''when a string is asigned to 
            '''variable diferent from string VB
            '''try to transform string to Double
            first_val = lblIntermediate.Text

            second_val = tbxResult.Text

            '''find out what sign user pressed and show 
            '''result in tbxResult
            If lblSignOfOperation.Text = "-" Then
                tbxResult.Text = first_val - second_val
            ElseIf lblSignOfOperation.Text = "+" Then
                tbxResult.Text = first_val + second_val
            ElseIf lblSignOfOperation.Text = "*" Then
                tbxResult.Text = first_val * second_val
            ElseIf lblSignOfOperation.Text = "/" Then
                tbxResult.Text = first_val / second_val
            End If

            '''making back sing to "" because
            '''current operation is finished
            lblSignOfOperation.Text = ""
        End If

    End Sub

